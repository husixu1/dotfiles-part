{
    // General settings ------------------------------------------------------
    "refactor.saveToFile": false,
    "list.insertMappings": {
        "<Tab>": "do:togglemode"
    },
    "list.normalMappings": {
        "<Tab>": "do:togglemode",
        "<CR>": "do:chooseaction"
    },

    // Disable inlay hints ---------------------------------------------------
    "inlayHint.filetypes": [],


    // Linter settings -------------------------------------------------------
    "diagnostic.enable": true,
    // Send linting information to ALE
    "diagnostic.displayByAle": true,
    // Disable clangd linting
    "clangd.disableDiagnostics": true,
    // Enable pyright linting, to avoid starting two pyright instances
    "pyright.disableDiagnostics": false,
    // Store pyright.createtypestub <package> results here
    "python.analysis.stubPath": ".stub",
    // Override some severities
    "python.analysis.diagnosticSeverityOverrides": {
        "reportGeneralTypeIssues": "warning"
    },
    // Avoid pyright warnings for untyped libraries
    "python.analysis.useLibraryCodeForTypes": false
}
