#stop
# ^ Stops default key bindings

#info
# ^ Key bindings for info windows

^g       first-node
^G       last-node
g        beginning-of-node
G        end-of-node

# vim basic movement simulation
j       next-line
k       prev-line
h       backward-char
l       forward-char

w       forward-word
b       backward-word

0       beginning-of-line
$       end-of-line

# scrolling
^j      down-line
^k      up-line

d       scroll-half-screen-down
^d      scroll-half-screen-down
u       scroll-half-screen-up
^u      scroll-half-screen-up

# index commands
i       index-search
I       virtual-index
,       next-index-match

# node commands
^n     next-node
^p     prev-node
^u     up-node
'      last-node
^t     top-node
^d     dir-node

^xg     goto-node
I       goto-invocation-node

# searching
/       search
?       search-backward
n       search-next
N       search-previous

\mf     xref-item
^xr     xref-item

^]      select-reference-this-line
^o      history-node

^c      abort-key

:h      get-info-help-node

:q      quit

#echo-area
# ^ Echo area key beindings
\mh     echo-area-backward
\ml     echo-area-forward
\m0     echo-area-beg-of-line
\m$     echo-area-end-of-line
\mw     echo-area-forward-word
\mx     echo-area-delete
\mu     echo-area-abort
^v      echo-area-quoted-insert
\mX     echo-area-kill-word

#var
# ^ Set default variables. No spaces around '=' sign

scroll-behavior=Page Only
nodeline=print
